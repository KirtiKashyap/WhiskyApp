<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/loginbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Time"
            android:textSize="24sp"
            android:textColor="@color/orangetextcolor"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/orangetextcolor"
            android:layout_marginTop="10dp"
            android:text="@string/reservation_time"/>

        <android.widget.Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:text="OK"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:background="@drawable/swipetoconfirmbuttonbg"/>
    </LinearLayout>
</RelativeLayout>