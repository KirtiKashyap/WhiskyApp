<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dashboard.ui.PassFragment"
        android:id="@+id/constraint_profile"
        android:fitsSystemWindows="true"
        android:background="@drawable/loginbg">
    <include
        android:id="@+id/main_header"
        layout="@layout/main_header_new" />
        <View
            android:id="@+id/view1"
            android:background="@color/greycolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_header"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            android:textColor="@color/orangetextcolor"
            android:id="@+id/nogustText"
            android:textSize="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:text="Monthly Guest Passes"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    <TextView
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nogustText"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:id="@+id/nogustTextView"
        android:textSize="@dimen/_20sdp"
        android:text="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:ignore="RtlCompat" />
        <View
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/view2"
            android:background="@color/greycolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nogustTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="Remaining Guest Passes"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:textColor="@color/themecolor"
        android:id="@+id/regustText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat" />
        <TextView
            android:layout_marginTop="20dp"
            android:text="0"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="@drawable/circle_shape"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regustText"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/regustTextView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:ignore="RtlCompat" />
        <View
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/view3"
            android:background="@color/greycolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regustTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>