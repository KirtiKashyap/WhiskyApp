<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
       >


        <ImageView
            android:id="@+id/img_eventtop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/event_top_image"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img_eventbg_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/img_eventbottom_gradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/loginbg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_eventbg_guide"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/img_eventbg_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"/>

        <include
            android:id="@+id/event_header"
            layout="@layout/events_header"
            app:layout_constraintTop_toBottomOf="@id/header_topguide"
            app:layout_constraintBottom_toTopOf="@id/header_bottomguide"

            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_topguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.01"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_bottomguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07"/>

        <TextView
            android:id="@+id/tv_eventname1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/tv_eventname1_startguide"
            app:layout_constraintEnd_toStartOf="@id/tv_eventname1__endguide"
            app:layout_constraintTop_toTopOf="@id/tv_eventname1_top_guide"
            app:layout_constraintBottom_toBottomOf="@id/tv_eventname1_bottom_guide"
            android:text="VICTORIA"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/_20sdp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname1_top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname1_bottom_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname1_startguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname1__endguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>

        <TextView
            android:id="@+id/tv_eventname2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WHISKY"
            android:textColor="@color/orangetextcolor"
            android:textStyle="bold"
            android:textSize="@dimen/_60sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_eventname2_bottom_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_eventname2_top_guide"
            android:includeFontPadding="false"
           />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname2_top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname2_bottom_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70"/>

        <TextView
            android:id="@+id/tv_eventname3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FESTIVAL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_24sdp"
            android:fontFamily="@font/archivonarrow_regular"
            app:layout_constraintBottom_toBottomOf="@id/tv_eventname3_bottom_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_eventname3_top_guide"
            android:includeFontPadding="false"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname3_top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tv_eventname3_bottom_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>
        <include
            android:id="@+id/event_date_time"
            layout="@layout/event_date_time"
            app:layout_constraintTop_toBottomOf="@id/event_date_time_topguide"
            app:layout_constraintBottom_toTopOf="@id/event_date_time_bottomguide"

            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/event_date_time_topguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/event_date_time_bottomguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78"/>

        <include
            android:id="@+id/event_rsvp"
            layout="@layout/event_rsvp"
            app:layout_constraintBottom_toTopOf="@id/event_date_time_bottomguide"
            app:layout_constraintTop_toBottomOf="@id/event_date_time_topguide"
             />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/event_rsvp_topguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.83"/>

        <!--<androidx.constraintlayout.widget.Guideline
            android:id="@+id/event_rsvp_bottomguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86"/>-->

        <TextView
            android:id="@+id/tv_rsvp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rsvp_startguide"
            app:layout_constraintEnd_toStartOf="@id/rsvp__endguide"
            app:layout_constraintTop_toBottomOf="@id/event_date_time_bottomguide"
            app:layout_constraintBottom_toBottomOf="@id/rsvp_bottomguide"
            android:text="RSVP"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/orangetextcolor"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rsvp_topguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rsvp_bottomguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rsvp_startguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28"/>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rsvp__endguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.73"/>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click to buy"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rsvp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
