<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:fitsSystemWindows="true"
    android:background="@drawable/loginbg"
    android:id="@+id/constraint_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_eventtop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/event_top_image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/img_eventbg_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_eventbg_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43"/>
    <include
        android:id="@+id/event_header"
        layout="@layout/events_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/event_intrested_bottomguide"
        app:layout_constraintTop_toBottomOf="@+id/img_eventbg_guide"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            android:text="VICTORIA"
            android:layout_gravity="top"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/_18sdp"
            android:id="@+id/tv_eventname1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"/>
        <TextView
            android:includeFontPadding="false"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="WHISKY"
            android:textColor="@color/orangetextcolor"
            android:textStyle="bold"
            android:textSize="@dimen/_38sdp"
            android:id="@+id/tv_eventname2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>
        <TextView
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/_16sdp"
            android:id="@+id/tv_eventname3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_gravity="top"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrow_regular"
                android:text="SATURDAY"
                android:textColor="@color/orangetextcolor"
                android:textSize="@dimen/_15sdp"
                android:gravity="center" />
            <TextView
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivonarrow_regular"
                android:text="December"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/orangetextcolor"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/emptyview1"
                    android:layout_width="1dp"
                    android:layout_height="55dp"
                    android:background="@color/orangetextcolor"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivonarrow_regular"
                    android:text="22ND"
                    android:textColor="@color/orangetextcolor"
                    android:textSize="@dimen/_30sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <View
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/emptyview2"
                    android:layout_width="1dp"
                    android:layout_height="55dp"
                    android:background="@color/orangetextcolor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:id="@+id/tv_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivonarrow_regular"
                    android:text="11:30AM"
                    android:textColor="@color/orangetextcolor"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivonarrow_regular"
                    android:text="05:30PM"
                    android:textColor="@color/orangetextcolor"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="RtlCompat" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1.2">
            <TextView
                android:id="@+id/passtextView"
                android:text="Avail Guest Pass:"
                android:fontFamily="@font/archivonarrow_regular"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="35dp"/>
            <Spinner
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/spinnerGuestPass"
                android:background="@drawable/spinnerbackground"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/plustextView"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="+1"
                android:visibility="gone"
                android:fontFamily="@font/archivonarrow_regular"
                android:textColor="@color/white"
                android:gravity="right"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="35dp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/plusOne"
                android:layout_width="0dp"
                app:showText="true"
                android:visibility="gone"
                android:layout_weight="0.4"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/archivonarrow_regular"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:layout_height="35dp"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_gravity="top"
            android:text="Click to buy"
            android:textSize="@dimen/_22sdp"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:gravity="top|center"
            android:textStyle="bold"
            android:id="@+id/tv_buy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:id="@+id/rsvpLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_rsvp_intersted"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="15dp"
                android:src="@drawable/event_intersted"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_rsvp"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/event_rsvp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/tv_rsvp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSVP"
                    android:fontFamily="@font/archivonarrow_regular"
                    android:textColor="@color/orangetextcolor"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_20sdp"
                android:id="@+id/img_rsvp_notintersted"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/event_notintersted"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/event_intrested_bottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
