<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/loginbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Cancel"
            android:textSize="24sp"
            android:textColor="@color/orangetextcolor"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:text="Enter Description"/>
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:background="@drawable/reserveedittext_bg"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:minHeight="40dp"
            android:inputType="textLongMessage"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/orangetextcolor"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

        <android.widget.Button
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:id="@+id/submit_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:background="@drawable/swipetoconfirmbuttonbg"/>

        <android.widget.Button
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:id="@+id/dialogDismiss_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="CANCEL"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/archivonarrow_regular"
            android:textColor="@color/white"
            android:background="@drawable/swipetoconfirmbuttonbg"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>