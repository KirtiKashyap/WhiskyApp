<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#0b0d0d"
                        android:endColor="#0b0d0d"
                        android:angle="270" />
                    <stroke
                        android:width="0.2dp"
                        android:color="#0b0d0d" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="2dp"
                        android:bottom="0dp" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                >
                <bitmap android:src="@drawable/drop_down"
                    android:gravity="right|center_vertical"
                    android:tint="@color/orangetextcolor"/>
            </item>
        </layer-list>
    </item>
</selector>