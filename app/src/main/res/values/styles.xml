        <style name="AppTheme.CardTheme">
            <item name="colorPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/white</item>
            <item name="android:textColorHint">@color/white</item>
            <item name="colorAccent">@color/white</item>
            <item name="colorControlNormal">@color/white</item>
            <item name="colorControlActivated">@color/white</item>
            <item name="android:textColor">@color/white</item>

    </style>
    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>

    </style>

    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/orangetextcolor</item>
        <item name="android:textColorHint">@color/orangetextcolor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@font/archivonarrow_regular</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/archivonarrow_regular</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/notiSuccessColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


